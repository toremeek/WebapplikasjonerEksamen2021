// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  createdAt DateTime @default(now())
}

model Calender {
  id Int @id @default(autoincrement())
  name String @unique
  createdAt DateTime @default(now())
  slot Slot[]
}

model Slot {
  id Int @id @default(autoincrement())
  slug String @unique
  order Int @unique
  createdAt DateTime @default(now())
  openAt DateTime
  calender Calender @relation(fields: [calenderId], references: [id])
  calenderId Int
}

model UserSlot {
  id Int @id @default(autoincrement())
  coupon String
  createdAt DateTime @default(now())
  // Må lage relasjonen
  slotId Int
  // Må lage relasjonen
  userId Int
}